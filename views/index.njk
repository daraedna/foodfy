{% extends 'layout.njk' %}

{% block content %}

    <div id="container">
        <div class="rectangle">
            <div class="text">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos
                    com receitas criadas por profissionais
                    do mundo inteiro.</p>
            </div>
            <img src="./assets/chef.png" alt="chef">
        </div>

        <div class="most-accessed">
            <h2>Mais acessadas</h2>
            <div class="recipes">

                {% for recipe in recipes %}
                    {% if loop.index0 < 6 %}
                        <div class="recipe">
                            <img src="{{recipe.image}}" alt="{{recipe.title}}">
                            <h3>{{recipe.title}}</h3>
                            <p>{{recipe.author}}</p>
                        </div>
                    {% endif %}
                {% endfor %}
                
            </div>
        </div>
    </div>
    <script src="/scripts/recipes.js"></script>

    
{% endblock %}